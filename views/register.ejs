        <!-- Content - Form Register -->
        <div class="container-fluid text-light">
            <div class="row row-content">
                <div class="col-xs-12 col-sm-12 title d-flex justify-content-center">
                    <form method="POST" action="../users" class="register">
                        <h2>Register</h2>
                        <label for="name">Name</label>
                        <input type="text" id="name" name="nickname">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email">
                        <label for="user">User Name</label>
                        <input type="text" id="user" name="username">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="userpwd">
                        <button type="submit">Sign Up</button>
                    </form>

                </div>
            </div>

        </div>

